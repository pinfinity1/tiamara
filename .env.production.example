# .env.production.example
# این فایل فقط جهت اطلاع است و روی سرور VPS در فایل .env اصلی کپی می‌شود

# دیتابیس
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=tiamara
# نکته: در سرور به جای localhost نام سرویس postgres استفاده می‌شود
DATABASE_URL="postgresql://user:password@postgres:5432/tiamara?schema=public"

# سرور
PORT=3001
JWT_SECRET="یک_رمز_بسیار_قوی"

# کلیدهای سرویس‌ها (Cloudinary, Zarinpal, SMS, OpenAI)
# ... (همان مقادیر واقعی را در سرور وارد کنید)

# کلاینت
AUTH_SECRET="یک_رمز_بسیار_قوی_دیگر"
ARCJET_ENV="production"

# آدرس‌ها (دامنه واقعی)
CLIENT_URL="https://tiamara.ir"
SERVER_URL="https://api.tiamara.ir"
AUTH_URL="https://tiamara.ir"

# API
NEXT_PUBLIC_API_BASE_URL="https://api.tiamara.ir/api"
API_BASE_URL_SERVER="http://server:3001/api"